    <%= f.text_field :Nic %>
  </div>
  <div class="field">
    <%= f.label :Address %><br>
    <%= f.text_field :Address %>
  </div>
  <div class="field">
    <%= f.label :City %><br>
    <%= f.text_field :City %>
  </div>
  <div class="field">
    <%= f.label :Province %><br>
    <%= f.text_field :Province %>
  </div>
  <div class="field">
    <%= f.label :District %><br>
    <%= f.text_field :District %>
  </div>
  <div class="field">
